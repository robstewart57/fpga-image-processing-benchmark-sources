package std.stdio;

actor StreamToRGB() uint(size=8) stream ==> int(size=8) R, int(size=8) G, int(size=8) B: 
	
	getR: action stream:[val] ==> R:[val]
	do
	end
	
	getG: action stream:[val] ==> G:[val]
	do
	end
	
	getB: action stream:[val] ==> B:[val]
	do
	end
		
	schedule fsm s0 :		
		s0 ( getR ) --> s1;
		s1 ( getG ) --> s2;
		s2 ( getB ) --> s0;
	end
		
end